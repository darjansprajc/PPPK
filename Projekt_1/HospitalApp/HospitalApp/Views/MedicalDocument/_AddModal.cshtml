@model HospitalApp.Models.MedicalDocument
@{
    Doctor? doctor = ViewBag.Doctor as HospitalApp.Models.Doctor;
}
<div class="modal fade" id="addMedicalDocumentModal" tabindex="-1" aria-labelledby="addMedicalDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="Add" asp-controller="MedicalDocument">
                <input type="hidden" name="PatientId" value="@Model.PatientId" />
                <input type="hidden" name="DoctorId" value="@doctor.Id" />
                <div class="modal-header">
                    <h5 class="modal-title" id="addMedicalDocumentModalLabel">Create new medical document</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="Title" required />
                    </div>
                    <div class="mb-3">
                        <label for="sickness" class="form-label">Sickness</label>
                        <input type="text" class="form-control" id="sickness" name="Sickness" required />
                    </div>
                    <div class="mb-3">
                        <label for="diagnosis" class="form-label">Diagnosis</label>
                        <input type="text" class="form-control" id="diagnosis" name="Diagnosis" required />
                    </div>
                    <div class="mb-3">
                        <label for="startOfSickness" class="form-label">Start Of Sickness</label>
                        <input type="date" class="form-control" id="startOfSickness" name="StartOfSickness" required />
                    </div>
                    <div class="mb-3">
                        <label for="endOfSickness" class="form-label">End Of Sickness</label>
                        <input type="date" class="form-control" id="endOfSickness" name="EndOfSickness" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Document</button>
                </div>
            </form>
        </div>
    </div>
</div>
